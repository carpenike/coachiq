{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:best-practices",
    "group:monorepos"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{{depName}}}",
  "commitMessageExtra": "to {{{newVersion}}}",
  "prBodyNotes": [
    "This PR was generated by Renovate and follows the release-please commit/PR conventions."
  ],
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "vulnerability"
    ],
    "addLabels": [
      "urgent"
    ],
    "assignees": [
      "@carpenike"
    ]
  },
  "configMigration": true,
  "minimumReleaseAge": "3 days",
  "prCreation": "not-pending",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "recreateWhen": "always",
    "schedule": [
      "before 6am on Monday"
    ]
  },
  "schedule": [
    "after 10pm",
    "before 5am"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Pin all dependencies",
      "matchUpdateTypes": [
        "pin"
      ],
      "groupName": "Pin all dependencies"
    },
    {
      "description": "GitHub Actions - automerge and group",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": true,
      "addLabels": [
        "github-actions"
      ]
    },
    {
      "description": "Security updates - high priority, no automerge",
      "matchPackagePatterns": [
        "^fastapi$",
        "^uvicorn$",
        "^python-can$",
        "^pydantic$",
        "^requests$",
        "^urllib3$",
        "^cryptography$"
      ],
      "addLabels": [
        "security",
        "urgent"
      ],
      "automerge": false,
      "minimumReleaseAge": "0 days",
      "assignees": [
        "@carpenike"
      ]
    },
    {
      "description": "Backend core dependencies - careful handling",
      "matchManagers": [
        "poetry"
      ],
      "matchPaths": [
        "pyproject.toml",
        "poetry.lock"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "matchPackagePatterns": [
        "^fastapi$",
        "^uvicorn$",
        "^python-can$",
        "^pydantic$",
        "^langchain-"
      ],
      "groupName": "Backend core dependencies",
      "addLabels": [
        "python",
        "backend",
        "core"
      ],
      "minimumReleaseAge": "7 days",
      "assignees": [
        "@carpenike"
      ]
    },
    {
      "description": "Backend development tools",
      "matchManagers": [
        "poetry"
      ],
      "matchPaths": [
        "pyproject.toml",
        "poetry.lock"
      ],
      "matchDepTypes": [
        "group.dev"
      ],
      "groupName": "Backend dev tools (non-major)",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "addLabels": [
        "python",
        "backend",
        "dev-tools"
      ],
      "automerge": true,
      "matchPackagePatterns": [
        "^ruff$",
        "^mypy$",
        "^pytest",
        "^pre-commit$",
        "^djlint$"
      ]
    },
    {
      "description": "Nix flake inputs",
      "matchManagers": [
        "nix"
      ],
      "groupName": "Nix flake inputs",
      "addLabels": [
        "nix"
      ]
    },
    {
      "description": "Pre-commit hooks",
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "Pre-commit hooks",
      "addLabels": [
        "pre-commit",
        "hooks"
      ]
    },
    {
      "description": "Frontend React core packages - careful handling",
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "web_ui/**"
      ],
      "groupName": "React core packages",
      "addLabels": [
        "frontend",
        "react"
      ],
      "minimumReleaseAge": "7 days",
      "matchPackagePatterns": [
        "^react$",
        "^react-dom$",
        "^react-router",
        "^@tanstack/react-query$"
      ]
    },
    {
      "description": "Frontend TypeScript definitions - safe to automerge",
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "web_ui/**"
      ],
      "groupName": "TypeScript type definitions",
      "addLabels": [
        "frontend",
        "typescript",
        "types"
      ],
      "automerge": true,
      "matchPackagePatterns": [
        "^@types/"
      ]
    },
    {
      "description": "Frontend ESLint packages",
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "web_ui/**"
      ],
      "groupName": "ESLint packages",
      "addLabels": [
        "frontend",
        "linting"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackagePatterns": [
        "^eslint",
        "eslint-plugin-"
      ]
    },
    {
      "description": "Frontend testing packages",
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "web_ui/**"
      ],
      "groupName": "Testing packages",
      "addLabels": [
        "frontend",
        "testing"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackagePatterns": [
        "^@testing-library/",
        "^vitest$",
        "^jsdom$"
      ]
    },
    {
      "description": "Frontend build tools",
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "web_ui/**"
      ],
      "groupName": "Build tools",
      "addLabels": [
        "frontend",
        "build-tools"
      ],
      "matchPackagePatterns": [
        "^vite$",
        "^@vitejs/",
        "^typescript$"
      ]
    },
    {
      "description": "Frontend CSS and styling tools",
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "web_ui/**"
      ],
      "groupName": "CSS tooling",
      "addLabels": [
        "frontend",
        "styling"
      ],
      "matchPackagePatterns": [
        "^tailwindcss$",
        "^postcss$",
        "^autoprefixer$"
      ]
    },
    {
      "description": "Frontend UI component libraries",
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "web_ui/**"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "UI component libraries",
      "addLabels": [
        "frontend",
        "ui-components"
      ],
      "matchPackagePatterns": [
        "^lucide-react$",
        "^clsx$",
        "^@radix-ui/"
      ]
    },
    {
      "description": "Documentation tools",
      "matchManagers": [
        "poetry"
      ],
      "matchPaths": [
        "pyproject.toml",
        "poetry.lock"
      ],
      "groupName": "Documentation tools",
      "addLabels": [
        "documentation"
      ],
      "matchPackagePatterns": [
        "^mkdocs",
        "^mkdocs-",
        "^mkdocstrings"
      ]
    },
    {
      "description": "Major updates - careful review required",
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "major-update"
      ],
      "minimumReleaseAge": "14 days",
      "assignees": [
        "@carpenike"
      ]
    },
    {
      "description": "Lock file maintenance scheduling",
      "matchManagers": [
        "npm",
        "poetry"
      ],
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "schedule": [
        "before 6am on Monday"
      ],
      "automerge": true
    },
    {
      "description": "Ignore prereleases by default",
      "matchManagers": [
        "npm",
        "poetry",
        "nix"
      ],
      "ignoreUnstable": true
    }
  ]
}
