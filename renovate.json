{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:best-practices",
    "group:monorepos"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "commitMessageAction": "update",
  "commitMessageTopic": "${depName}@${newVersion}",
  "prTitle": "chore(deps): update ${depName} to ${newVersion}",
  "prBodyNotes": [
    "This PR was generated by Renovate and follows the release-please commit/PR conventions."
  ],
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"],
    "addLabels": ["urgent"],
    "assignees": ["@carpenike"]
  },
  "configMigration": true,
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "recreateWhen": "always",
    "schedule": ["before 6am on Monday"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "pin"
      ],
      "groupName": "Pin all dependencies"
    },
    {
      "description": "GitHub Actions - automerge and group",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "addLabels": ["github-actions"]
    },
    {
      "description": "Security updates - high priority, no automerge",
      "matchPackageNames": [
        "/.*(security|cve|vuln).*/",
        "/^fastapi$/",
        "/^uvicorn$/",
        "/^python-can$/"
      ],
      "addLabels": ["security", "urgent"],
      "automerge": false,
      "minimumReleaseAge": "0 days",
      "assignees": ["@carpenike"]
    },
    {
      "description": "Python core dependencies - careful handling",
      "matchManagers": ["poetry"],
      "matchDepTypes": ["dependencies"],
      "matchPackageNames": [
        "/^fastapi$/",
        "/^uvicorn$/",
        "/^python-can$/",
        "/^pydantic$/",
        "/^langchain-/"
      ],
      "groupName": "core python dependencies",
      "addLabels": ["python", "core"],
      "minimumReleaseAge": "7 days",
      "assignees": ["@carpenike"]
    },
    {
      "matchManagers": [
        "poetry",
        "nix"
      ],
      "groupName": "shared dev tools (black, mypy, etc)",
      "addLabels": [
        "python",
        "nix",
        "shared-dev"
      ],
      "matchPackageNames": [
        "/black/",
        "/ruff/",
        "/mypy/",
        "/pytest/",
        "/pre-commit/"
      ]
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "python dependencies (non-major)",
      "addLabels": [
        "python"
      ]
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "python",
        "major"
      ]
    },
    {
      "matchManagers": [
        "nix"
      ],
      "groupName": "nix flake inputs",
      "addLabels": [
        "nix"
      ]
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "dev"
      ],
      "groupName": "python dev tools (non-major)",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "addLabels": [
        "python",
        "dev-tools"
      ],
      "matchPackageNames": [
        "/ruff/",
        "/mypy/",
        "/pytest/",
        "/pre-commit/",
        "/djlint/"
      ]
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "pre-commit hooks",
      "addLabels": [
        "pre-commit",
        "hooks"
      ]
    },
    {
      "description": "React ecosystem - careful handling",
      "matchManagers": ["npm"],
      "groupName": "React core packages",
      "addLabels": ["frontend", "react"],
      "minimumReleaseAge": "7 days",
      "matchPackageNames": [
        "/^react$/",
        "/^react-dom$/",
        "/^react-router/",
        "/^@tanstack\/react-query$/"
      ]
    },
    {
      "description": "TypeScript definitions - safe to automerge",
      "matchManagers": ["npm"],
      "groupName": "TypeScript type definitions",
      "addLabels": ["typescript", "types"],
      "automerge": true,
      "matchPackageNames": ["/^@types//"]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "ESLint packages",
      "addLabels": [
        "frontend",
        "linting"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^eslint/",
        "/eslint-plugin-/"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "Testing packages",
      "addLabels": [
        "frontend",
        "testing"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/jest/",
        "/^@testing-library//"
      ]
    },
    {
      "description": "Development tools - safe automerge for minor/patch",
      "matchManagers": ["npm", "poetry"],
      "matchDepTypes": ["devDependencies", "dev"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "addLabels": ["dev-tools"]
    },
    {
      "description": "Build tools - group and careful handling",
      "matchManagers": ["npm"],
      "groupName": "Build tools",
      "addLabels": ["frontend", "build-tools"],
      "minimumReleaseAge": "3 days",
      "matchPackageNames": [
        "/vite/",
        "/^@vitejs//",
        "/typescript/",
        "/^typescript-/"
      ]
    },
    {
      "description": "Documentation tools",
      "matchManagers": ["poetry"],
      "groupName": "Documentation tools",
      "addLabels": ["documentation"],
      "matchPackageNames": [
        "/mkdocs/",
        "/^mkdocs-/",
        "/^mkdocstrings/"
      ]
    },
    {
      "description": "CSS and styling tools",
      "matchManagers": ["npm"],
      "groupName": "CSS tooling",
      "addLabels": ["frontend", "styling"],
      "matchPackageNames": [
        "/tailwindcss/",
        "/postcss/",
        "/autoprefixer/"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "React core packages",
      "addLabels": [
        "frontend",
        "react"
      ],
      "minimumReleaseAge": "7 days",
      "matchPackageNames": [
        "/^react$/",
        "/^react-dom$/",
        "/^react-router/"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "UI component libraries",
      "addLabels": [
        "frontend",
        "ui-components"
      ],
      "matchPackageNames": [
        "/lucide-react/",
        "/clsx/"
      ]
    },
    {
      "description": "Major updates - careful review required",
      "matchUpdateTypes": ["major"],
      "addLabels": ["major-update"],
      "minimumReleaseAge": "14 days",
      "assignees": ["@carpenike"]
    },
    {
      "description": "Lock file maintenance scheduling",
      "matchManagers": ["npm", "poetry"],
      "matchUpdateTypes": ["lockFileMaintenance"],
      "schedule": ["before 6am on Monday"],
      "automerge": true
    },
    {
      "description": "Ignore prereleases by default",
      "matchManagers": ["npm", "poetry", "nix"],
      "ignoreUnstable": true
    }
  ],
  "schedule": [
    "after 10pm",
    "before 5am"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
