# RVC2API Environment Variables
#
# This file documents all available environment variables for the RVC2API application.
# Copy this file to .env and modify the values as needed for your environment.
#
# All settings use the RVC2API_ prefix for nested configuration options.
# Use double underscores (__) to set nested values, e.g., RVC2API_SERVER__HOST=localhost

# =============================================================================
# APPLICATION METADATA
# =============================================================================
RVC2API_APP_NAME=rvc2api
RVC2API_APP_VERSION=0.0.0
RVC2API_APP_DESCRIPTION=API for RV-C CANbus
RVC2API_APP_TITLE=RV-C API

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Basic server settings
RVC2API_SERVER__HOST=0.0.0.0
RVC2API_SERVER__PORT=8000
RVC2API_SERVER__WORKERS=1
RVC2API_SERVER__RELOAD=false
RVC2API_SERVER__DEBUG=false
RVC2API_SERVER__ROOT_PATH=

# Uvicorn-specific settings
RVC2API_SERVER__ACCESS_LOG=true
RVC2API_SERVER__KEEP_ALIVE_TIMEOUT=5
RVC2API_SERVER__TIMEOUT_KEEP_ALIVE=5
RVC2API_SERVER__TIMEOUT_GRACEFUL_SHUTDOWN=30

# Performance and connection settings
# RVC2API_SERVER__LIMIT_CONCURRENCY=1000
# RVC2API_SERVER__LIMIT_MAX_REQUESTS=10000
RVC2API_SERVER__TIMEOUT_NOTIFY=30

# SSL/TLS settings (optional)
# RVC2API_SERVER__SSL_KEYFILE=/path/to/key.pem
# RVC2API_SERVER__SSL_CERTFILE=/path/to/cert.pem
# RVC2API_SERVER__SSL_CA_CERTS=/path/to/ca.pem
# RVC2API_SERVER__SSL_CERT_REQS=0

# Worker process settings
RVC2API_SERVER__WORKER_CLASS=uvicorn.workers.UvicornWorker
RVC2API_SERVER__WORKER_CONNECTIONS=1000

# Server identification headers
RVC2API_SERVER__SERVER_HEADER=true
RVC2API_SERVER__DATE_HEADER=true

# Legacy server configuration (deprecated - use RVC2API_SERVER__ prefixed options above)
RVC2API_HOST=0.0.0.0
RVC2API_PORT=8000
DEBUG=false
RVC2API_ROOT_PATH=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
RVC2API_CORS__ALLOW_ORIGINS=*
RVC2API_CORS__ALLOW_CREDENTIALS=true
RVC2API_CORS__ALLOW_METHODS=*
RVC2API_CORS__ALLOW_HEADERS=*

# Legacy CORS configuration (deprecated - use RVC2API_CORS__ prefixed options above)
CORS_ORIGINS=*

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# RVC2API_SECURITY__SECRET_KEY=your-secret-key-here
RVC2API_SECURITY__JWT_ALGORITHM=HS256
RVC2API_SECURITY__JWT_EXPIRE_MINUTES=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
RVC2API_LOGGING__LEVEL=INFO
RVC2API_LOGGING__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
RVC2API_LOGGING__LOG_TO_FILE=false
# RVC2API_LOGGING__LOG_FILE=/path/to/log/file.log
RVC2API_LOGGING__MAX_FILE_SIZE=10485760
RVC2API_LOGGING__BACKUP_COUNT=5

# Legacy logging configuration (deprecated - use RVC2API_LOGGING__ prefixed options above)
LOG_LEVEL=INFO

# =============================================================================
# CAN BUS CONFIGURATION
# =============================================================================
RVC2API_CAN__BUSTYPE=socketcan
RVC2API_CAN__INTERFACE=vcan0
RVC2API_CAN__BITRATE=500000

# Legacy CAN bus configuration (deprecated - use RVC2API_CAN__ prefixed options above)
CAN_CHANNELS=vcan0
CAN_BUSTYPE=socketcan
CAN_BITRATE=500000

# =============================================================================
# FILE PATHS
# =============================================================================
# Optional paths to RV-C JSON spec and device mapping YAML
# RVC2API_RVC_SPEC_PATH=/path/to/custom/rvc_spec.json
# RVC2API_RVC_COACH_MAPPING_PATH=/path/to/custom/coach_mapping.default.yml
RVC2API_STATIC_DIR=static

# =============================================================================
# FEATURE FLAGS
# =============================================================================
RVC2API_FEATURES__ENABLE_MAINTENANCE_TRACKING=false
RVC2API_FEATURES__ENABLE_NOTIFICATIONS=false
RVC2API_FEATURES__ENABLE_UPTIMEROBOT=false
RVC2API_FEATURES__ENABLE_PUSHOVER=false
RVC2API_FEATURES__ENABLE_VECTOR_SEARCH=true
RVC2API_FEATURES__ENABLE_API_DOCS=true
RVC2API_FEATURES__ENABLE_METRICS=true

# =============================================================================
# MAINTENANCE TRACKING (optional - only used if ENABLE_MAINTENANCE_TRACKING=true)
# =============================================================================
# RVC2API_MAINTENANCE__CHECK_INTERVAL=3600
# RVC2API_MAINTENANCE__NOTIFICATION_THRESHOLD_DAYS=7
# RVC2API_MAINTENANCE__DATABASE_PATH=/path/to/maintenance.db

# =============================================================================
# NOTIFICATION SERVICES (optional - only used if ENABLE_NOTIFICATIONS=true)
# =============================================================================

# Pushover notifications
# RVC2API_NOTIFICATIONS__PUSHOVER_USER_KEY=your-pushover-user-key
# RVC2API_NOTIFICATIONS__PUSHOVER_API_TOKEN=your-pushover-api-token
# RVC2API_NOTIFICATIONS__PUSHOVER_DEVICE=device-name
# RVC2API_NOTIFICATIONS__PUSHOVER_PRIORITY=0

# UptimeRobot integration
# RVC2API_NOTIFICATIONS__UPTIMEROBOT_API_KEY=your-uptimerobot-api-key

# Legacy notification configuration (deprecated - use RVC2API_NOTIFICATIONS__ prefixed options above)
# PUSHOVER_USER_KEY=your-pushover-user-key
# PUSHOVER_API_TOKEN=your-pushover-api-token
# UPTIMEROBOT_API_KEY=your-uptimerobot-api-key

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# GitHub repository for update checks
# RVC2API_GITHUB_UPDATE_REPO=owner/repo-name

# Controller source address
RVC2API_CONTROLLER_SOURCE_ADDR=0xF9

# OpenAI API Key for FAISS Documentation Search
# Required for vector embedding generation for RV-C documentation search
# OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# CONFIGURATION NOTES
# =============================================================================
#
# 1. Nested Configuration:
#    Use double underscores (__) to separate nested configuration levels
#    Example: RVC2API_SERVER__HOST sets the server.host configuration
#
# 2. List Values:
#    Comma-separated values will be parsed as lists
#    Example: RVC2API_CANBUS__CHANNELS=can0,can1,can2
#
# 3. Boolean Values:
#    Use true/false, 1/0, yes/no, on/off (case insensitive)
#
# 4. Backward Compatibility:
#    Legacy environment variables (without RVC2API_ prefix) are still supported
#    but will be deprecated in future versions
#
# 5. Environment File:
#    This file will be automatically loaded if present as .env
#    Environment variables override file settings
