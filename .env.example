# RVC2API Example Environment File
# Only include variables for actively used settings

# =============================================================================
# APPLICATION METADATA
# =============================================================================
RVC2API_APP_NAME=RVC2API
RVC2API_APP_VERSION=1.0.0
RVC2API_APP_DESCRIPTION=API for RV-C CANbus
RVC2API_APP_TITLE=RV-C API
RVC2API_ENVIRONMENT=development
RVC2API_DEBUG=false
RVC2API_TESTING=false
RVC2API_STATIC_DIR=static
RVC2API_RVC_SPEC_PATH=
RVC2API_RVC_COACH_MAPPING_PATH=
RVC2API_GITHUB_UPDATE_REPO=
RVC2API_CONTROLLER_SOURCE_ADDR=0xF9

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
RVC2API_SERVER__HOST=127.0.0.1
RVC2API_SERVER__PORT=8000
RVC2API_SERVER__RELOAD=false
RVC2API_SERVER__WORKERS=1
RVC2API_SERVER__ACCESS_LOG=true
RVC2API_SERVER__DEBUG=false
RVC2API_SERVER__ROOT_PATH=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
RVC2API_CORS__ENABLED=true
RVC2API_CORS__ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
RVC2API_CORS__ALLOW_CREDENTIALS=true
RVC2API_CORS__ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
RVC2API_CORS__ALLOW_HEADERS=*

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
RVC2API_SECURITY__SECRET_KEY=your-secret-key-change-in-production
RVC2API_SECURITY__API_KEY=
RVC2API_SECURITY__ALLOWED_IPS=
RVC2API_SECURITY__RATE_LIMIT_ENABLED=false
RVC2API_SECURITY__RATE_LIMIT_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
RVC2API_LOGGING__LEVEL=INFO
RVC2API_LOGGING__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
RVC2API_LOGGING__LOG_TO_FILE=false
RVC2API_LOGGING__COLORIZE=true

# =============================================================================
# CAN BUS CONFIGURATION
# =============================================================================
RVC2API_CAN__INTERFACE=vcan0
RVC2API_CAN__BUSTYPE=socketcan
RVC2API_CAN__BITRATE=250000
RVC2API_CAN__TIMEOUT=1.0
RVC2API_CAN__BUFFER_SIZE=1000
RVC2API_CAN__AUTO_RECONNECT=true
RVC2API_CAN__FILTERS=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
RVC2API_FEATURES__ENABLE_MAINTENANCE_TRACKING=false
RVC2API_FEATURES__ENABLE_NOTIFICATIONS=false
RVC2API_FEATURES__ENABLE_VECTOR_SEARCH=true
RVC2API_FEATURES__ENABLE_UPTIMEROBOT=false
RVC2API_FEATURES__ENABLE_PUSHOVER=false
RVC2API_FEATURES__ENABLE_API_DOCS=true
RVC2API_FEATURES__ENABLE_METRICS=true
RVC2API_FEATURES__MESSAGE_QUEUE_SIZE=1000
